//ðŸ‘‰ - Decimal to binary conversion
console.log(decTobinary(decimal))
let decimal= 56

let binary=" "
 
const decTobinary=(decimal)=>{

while( decimal>0){
    if(decimal%2==1)
    {
        binary="1" + binary
    }
    else{
        binary= "0"+ binary
    }
    decimal= Math.floor(decimal/2)
}
return binary
}
console.log(decTobinary(decimal))

//ðŸ‘‰ - Moving zero to end - A 


let arr=[1,2,3,4,0,0,0,9,8]
let arr1= []
let arr2=[]
let finArr=[]

for( let i of arr){
if( i==0)
{
    arr1.push(i)
}
else 
if( i!=0){
    arr2.push(i)
}}
finArr= arr2.concat(arr1)
console.log(finArr)

// ðŸ‘‰ moving zero to end - using Array methods 
arr=[1,2,3,9,0,0,0,8]

const filterr= arr.filter(x=>x!=0)

const filter2= arr.filter(x=> x==0)

console.log( finarr= filterr.concat(filter2))

//ðŸ‘‰ HCF

let hcf

const n1= 60
const n2= 72

for ( let i=1; i<=n1 && i<=n2; i++){
    if (n1%i==0 && n2%i==0){
        hcf= i;
    }
}
 console.log(hcf)

//ðŸ‘‰ hcf using arrow func 

const findHcf= (a,b)=>{
    let hcf;
    let n1=a;
    let n2=b;
    for( let i=1; i<=n1 && i<=n2; i++){
        if( n1%i==0 && n2%i==0)
        {
            hcf=i
        }

    }
    x= `Hcf of ${n1} & ${n2} is: ${hcf}`
    return x
}

 console.log(findHcf(60,72))
 
 // ðŸ‘‰ Uppercase to Lowercase

   let data= 'sjdHUkn'
    let swap =''
   for ( let i of data){
    let c= i
if(c== c.toUpperCase())
{
   swap +=c.toLowerCase()
} 
else
swap += c.toUpperCase()
  }

